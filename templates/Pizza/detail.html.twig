{% extends "base.html.twig" %}

{% block title %}Détail de la pizza{% endblock %}

{% block titrePage %}Les détails{% endblock %}


{% block body %}
    <div class="tp-main-body">
        <h2>{{ pizza.nom }}</h2>
        <h4>Cout de fabrication: {{ cout }}</h4>
        <h4>Ingrédients:</h4>
        {% for ingredients in ingredientPizza %}
            {{ ingredients.ingredient.nom }}
            {% if not loop.last %}, {% else %}.{% endif %}
        {% endfor %}
    </div>
{% endblock %}